DesertDunes11 is DesertDunes

constants:

   include blakston.khd

resources:

classvars:

properties:

   piRoom_num = RID_DESERTDUNES11

messages:
 
   Constructed()
   {
      plMonsters = [ [&XeoAcid, 10],
                     [&XeoAir, 10],
                     [&XeoEarth, 10],
                     [&XeoFire, 10],
                     [&XeoHoly, 10],
                     [&XeoIll, 10],
                     [&XeoUnholy, 10],
                     [&XeoWater, 10],
                     [&EarthElemental, 10],
                     [&FireElemental, 10]
                      ];
      
      propagate;
   }
 
   CreateStandardExits()
   {
      plEdge_Exits = $;
      plEdge_Exits = Cons([ LEAVE_NORTH, RID_DESERTDUNES10, 60, 102, ROTATE_NONE ],plEdge_Exits);
      plEdge_Exits = Cons([ LEAVE_SOUTH, RID_DESERTDUNES12, 60, 102, ROTATE_NONE ],plEdge_Exits);
      plEdge_Exits = Cons([ LEAVE_WEST, RID_DESERTDUNES7, 60, 102, ROTATE_NONE ],plEdge_Exits);
      plEdge_Exits = Cons([ LEAVE_EAST, RID_DESERTCLIFFACCESS, 10, 39, ROTATE_NONE ],plEdge_Exits);

      propagate;
   }

end
