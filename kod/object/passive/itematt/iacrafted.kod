ItemAttCrafted is ItemAttribute

///////////////////////////////////////////////////////////////////////
//
//   This item was crafted by a player.
//
///////////////////////////////////////////////////////////////////////

constants:

   include blakston.khd
   include protocol.khd

resources:

   itematt_crafted_desc = " This piece of gear was crafted by %s."

classvars:

   viItem_Att_Num = IA_CRAFTED
   vrDesc = itematt_crafted_desc

   viDifficulty = 5

properties:

   poCrafter = $

messages:

   AppendDesc()
   {
      AddPacket(4,vrDesc,4,send(poCrafter,@getname));

      return;
   }

   SetCrafter(who=$)
   {
      poCrafter = who;

      return;
   }

   InitiallyIdentified()
   {
      return TRUE;
   }

   AddToTreasureTable()
   {
      return;
   }

   CanBeSpoofed()
   {
      return FALSE;
   }

end
